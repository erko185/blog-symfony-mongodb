{# templates/list/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %} Create article{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12"><h1>Create article</h1></div>
        <div class="col-md-12">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

        </div>
        <div class="col-md-12">
            {{ form_start(form, {'attr': {'class': 'form-start-client','method':'post'} }) }}

            <div class="form_group">
                <div class="col-md-12 mb-3 mt-3 style-label">

                    {{ form_row(form.title, {'attr': {'class': 'form-control','placeholder':'Title'}}) }}

                </div>
            </div>

            <div class="form_group">
                <div class="col-md-12 mb-3 style-label">

                    {{ form_row(form.email, {'attr': {'type':'text','class': 'form-control','placeholder':'email@gmail.com'}}) }}

                </div>
            </div>

            <div class="form_group">
                <div class="col-md-12 mb-3 style-label">
                    {{ form_row(form.content, {'attr': {'class': 'form-control','placeholder':'text'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12 text-center" style="margin-top:5px;">
                    <button type="submit" class="btn  btn-primary">
                        Submit
                    </button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}